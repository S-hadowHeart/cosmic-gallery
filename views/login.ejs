<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - Pinterest</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
  <!-- Stars Background -->
  <div class="stars" id="stars"></div>

  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="card-space max-w-md w-full p-8 rounded-xl">
      <div class="text-center mb-8">
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt="Pinterest Logo" class="h-12 mx-auto mb-4" />
        <h1 class="text-2xl font-bold text-space-text">Welcome to the Cosmos</h1>
        <p class="text-space-text opacity-80">Enter your cosmic credentials</p>
      </div>

      <% if (locals.messages && messages.error) { %>
        <div class="bg-space-secondary bg-opacity-20 text-space-text p-4 rounded-lg mb-6 border border-space-secondary">
          <i class="fas fa-exclamation-circle mr-2"></i>
          <%= messages.error %>
        </div>
      <% } %>

      <form action="/login" method="POST" class="space-y-6">
        <div>
          <label for="email" class="block text-space-text text-sm font-medium mb-2">Cosmic Email</label>
          <input type="email" id="email" name="email" required
            class="input-space w-full px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-space-primary"
            placeholder="Enter your cosmic email">
        </div>

        <div>
          <label for="password" class="block text-space-text text-sm font-medium mb-2">Stellar Password</label>
          <input type="password" id="password" name="password" required
            class="input-space w-full px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-space-primary"
            placeholder="Enter your stellar password">
        </div>

        <button type="submit" class="btn-space-primary w-full py-2 rounded-lg">
          Enter Cosmos
        </button>
      </form>

      <div class="mt-6 text-center">
        <p class="text-space-text opacity-80">
          New to the galaxy?
          <a href="/signup" class="text-space-accent hover:text-space-primary">Join the Universe</a>
        </p>
      </div>
    </div>
  </div>

  <script>
    // Create stars background
    function createStars() {
      const starsContainer = document.getElementById('stars');
      const starCount = 100;

      for (let i = 0; i < starCount; i++) {
        const star = document.createElement('div');
        star.className = 'star';
        
        // Random position
        star.style.left = `${Math.random() * 100}%`;
        star.style.top = `${Math.random() * 100}%`;
        
        // Random size
        const size = Math.random() * 2;
        star.style.width = `${size}px`;
        star.style.height = `${size}px`;
        
        // Random animation duration
        star.style.setProperty('--duration', `${2 + Math.random() * 3}s`);
        
        starsContainer.appendChild(star);
      }
    }

    // Initialize stars on page load
    window.addEventListener('load', createStars);
  </script>
</body>
</html>
